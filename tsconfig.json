{
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions":{
        "alwaysStrict":true,
        "allowSyntheticDefaultImports":true,
        "declaration":false,
        "emitDecoratorMetadata":true,
        "experimentalDecorators":true,
        "inlineSourceMap":true,
        "lib":["ESNext"],
        "listEmittedFiles":true,
        "module": "commonjs",
        "moduleResolution":"Node",
        "pretty":true,
        "target":"ES2015"
    }
}